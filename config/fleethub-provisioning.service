[Unit]
Description=Edgeberry Fleet Hub - Provisioning Worker
After=network-online.target mosquitto.service
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/opt/Edgeberry/fleethub/provisioning-worker
Environment=NODE_ENV=production
EnvironmentFile=-/etc/Edgeberry/fleethub/provisioning.env
ExecStart=/usr/bin/node /opt/Edgeberry/fleethub/provisioning-worker/dist/index.js
Restart=on-failure
RestartSec=3
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=full
ProtectHome=true

[Install]
WantedBy=multi-user.target
