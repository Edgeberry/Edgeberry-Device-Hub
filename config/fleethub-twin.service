[Unit]
Description=Edgeberry Fleet Hub - Twin Service
After=network-online.target mosquitto.service
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/opt/Edgeberry/fleethub/twin-service
Environment=NODE_ENV=production
EnvironmentFile=-/etc/Edgeberry/fleethub/twin.env
ExecStart=/usr/bin/node /opt/Edgeberry/fleethub/twin-service/dist/index.js
Restart=on-failure
RestartSec=3
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=full
ProtectHome=true

[Install]
WantedBy=multi-user.target
