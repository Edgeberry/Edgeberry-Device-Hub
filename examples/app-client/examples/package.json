{
  "name": "node-red-contrib-edgeberry-devicehub",
  "version": "1.0.0",
  "description": "Node-RED nodes for Edgeberry Device Hub application integration",
  "main": "node-red-node.js",
  "scripts": {
    "build": "tsc && cp node-red-node.html dist/node-red-node.html",
    "clean": "rimraf dist",
    "dev": "run-p dev:ts dev:html",
    "dev:ts": "tsc -w",
    "dev:html": "nodemon --watch node-red-node.html --exec \"cp node-red-node.html dist/node-red-node.html\"",
    "prepare": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "node-red",
    "edgeberry",
    "device-hub",
    "iot",
    "devices"
  ],
  "author": "Edgeberry Team",
  "license": "GPL-3.0-or-later",
  "node-red": {
    "nodes": {
      "devicehub-in": "dist/node-red-node.js",
      "devicehub-out": "dist/node-red-node.js",
      "devicehub-config": "dist/node-red-node.js"
    }
  },
  "dependencies": {
    "edgeberry-device-hub-app-client": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.28",
    "@types/node-red": "^1.3.4",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Edgeberry/Edgeberry-Device-Hub.git",
    "directory": "examples/edgeberry-device-hub-app-client/examples"
  },
  "bugs": {
    "url": "https://github.com/Edgeberry/Edgeberry-Device-Hub/issues"
  },
  "homepage": "https://github.com/Edgeberry/Edgeberry-Device-Hub/tree/main/examples/edgeberry-device-hub-app-client"
}
