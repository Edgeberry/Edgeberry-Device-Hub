{
  "name": "@edgeberry/devicehub-node-red-contrib",
  "version": "1.5.0",
  "description": "Node-RED nodes for Edgeberry Device Hub application integration",
  "main": "dist/node-red-device-node.js",
  "scripts": {
    "build": "tsc && cp node-red-device-node.html dist/node-red-device-node.html && cp -r icons dist/",
    "clean": "rimraf dist",
    "dev": "run-p dev:ts dev:html",
    "dev:ts": "tsc -w",
    "dev:html": "nodemon --watch node-red-device-node.html --exec \"cp node-red-device-node.html dist/node-red-device-node.html\"",
    "prepare": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "node-red",
    "edgeberry",
    "device-hub",
    "iot",
    "devices"
  ],
  "author": "Edgeberry Team",
  "license": "GPL-3.0-or-later",
  "node-red": {
    "nodes": {
      "devicehub": "dist/node-red-device-node.js"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "package.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@edgeberry/devicehub-app-client": "^1.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.28",
    "@types/node-red": "^1.3.4",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Edgeberry/Edgeberry-Device-Hub.git",
    "directory": "examples/app-client/examples"
  },
  "bugs": {
    "url": "https://github.com/Edgeberry/Edgeberry-Device-Hub/issues"
  },
  "homepage": "https://github.com/Edgeberry/Edgeberry-Device-Hub/tree/main/examples/app-client/examples"
}
